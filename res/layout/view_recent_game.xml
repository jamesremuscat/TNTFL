<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtRedName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/red_player"
            android:gravity="center"
            android:text="asdf"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/text"
            android:textSize="@dimen/big_font_size" />

        <TextView
            android:id="@+id/txtSkillChangeRed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/red_skillchange"
            android:gravity="center_horizontal"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="top"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtRedScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingLeft="8dp"
                android:text="8"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/big_font_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/score_separator"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/big_font_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtBlueScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="8dp"
                android:text="8"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/big_font_size"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="dd/yy hh:ii"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtBlueName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_player"
            android:gravity="center"
            android:text="asdf"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/text"
            android:textSize="@dimen/big_font_size" />

        <TextView
            android:id="@+id/txtSkillChangeBlue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_skillchange"
            android:gravity="center_horizontal"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

</LinearLayout>