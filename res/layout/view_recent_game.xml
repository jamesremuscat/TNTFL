<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" xmlns:android="http://schemas.android.com/apk/res/android" android:paddingBottom="@dimen/activity_vertical_margin" android:paddingTop="@dimen/activity_vertical_margin">

  <RelativeLayout
      android:id="@+id/scoresBox"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:baselineAligned="false" >

    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_toLeftOf="@id/textView2">

      <TextView
          android:id="@+id/txtRedName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_centerVertical="true"
          android:layout_toLeftOf="@+id/txtRedScore"
          android:background="@drawable/red_player"
          android:gravity="center"
          android:text="asdf"
          android:textAppearance="?android:attr/textAppearanceLarge"
          android:textColor="@color/text"
          android:textSize="@dimen/big_font_size" />

      <TextView
          android:id="@+id/txtRedScore"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:gravity="right"
          android:paddingLeft="8dp"
          android:text="8"
          android:textAppearance="?android:attr/textAppearanceLarge"
          android:textSize="@dimen/big_font_size"
          android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_toRightOf="@id/textView2">

      <TextView
          android:id="@+id/txtBlueScore"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_centerVertical="true"
          android:paddingRight="8dp"
          android:text="8"
          android:textAppearance="?android:attr/textAppearanceLarge"
          android:textSize="@dimen/big_font_size"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/txtBlueName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:layout_toRightOf="@+id/txtBlueScore"
          android:background="@drawable/blue_player"
          android:gravity="center"
          android:text="asdf"
          android:textAppearance="?android:attr/textAppearanceLarge"
          android:textColor="@color/text"
          android:textSize="@dimen/big_font_size" />

    </RelativeLayout>

    <TextView android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_centerHorizontal="true" android:gravity="center" android:text="@string/score_separator" android:textAppearance="?android:attr/textAppearanceLarge" android:textSize="@dimen/big_font_size" android:textStyle="bold" />
  </RelativeLayout>

  <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:paddingTop="8dp">

    <TextView android:id="@+id/txtDate" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:paddingLeft="8dp" android:paddingRight="8dp" android:text="dd/yy hh:ii" android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView android:id="@+id/txtSkillChange" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center_horizontal" android:paddingLeft="4dp" android:paddingRight="4dp" android:textAppearance="?android:attr/textAppearanceLarge" />
  </LinearLayout>

</LinearLayout>
